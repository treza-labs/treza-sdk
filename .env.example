# ============================================
# Treza SDK Configuration
# ============================================
# Copy this file to .env and fill in your values
# Do NOT commit .env to version control!

# ============================================
# API Configuration
# ============================================

# Treza API URL (required for API operations)
TREZA_API_URL=https://api.treza.io/api
# For local development:
# TREZA_API_URL=http://localhost:3000/api
# For ngrok testing:
# TREZA_API_URL=https://your-ngrok-url.ngrok-free.app/api

# API Key for authenticated requests (REQUIRED)
TREZA_API_KEY=your-api-key-here  # REQUIRED

# ============================================
# Blockchain Configuration
# ============================================

# Network Selection (mainnet, sepolia, localhost)
NETWORK=sepolia

# RPC URLs
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR-ALCHEMY-KEY
SEPOLIA_RPC_URL=https://rpc.sepolia.org
# Alternative Sepolia RPC:
# SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR-ALCHEMY-KEY
LOCALHOST_RPC_URL=http://127.0.0.1:8545

# Chain IDs
MAINNET_CHAIN_ID=1
SEPOLIA_CHAIN_ID=11155111
LOCALHOST_CHAIN_ID=31337

# Contract Addresses
# KYCVerifier contract address (deployed)
MAINNET_KYC_VERIFIER_ADDRESS=0x...
SEPOLIA_KYC_VERIFIER_ADDRESS=0xB1D98F688Fac29471D91234d9f8EbB37238Df6FA
LOCALHOST_KYC_VERIFIER_ADDRESS=0x...

# Private Key (ONLY for write operations - keep secure!)
# ⚠️ NEVER commit this to version control
# ⚠️ Only needed for proof submission/verification transactions
PRIVATE_KEY=0x...your-private-key-here

# ============================================
# Example Configuration
# ============================================

# For testing examples/kyc/check-adult.ts
EXAMPLE_PROOF_ID=abc123...

# For testing examples/kyc/verify-proof.ts
EXAMPLE_USER_ADDRESS=0x742d35Cc6634C0532925a3b844Bc9e7595f0bEb

# ============================================
# Development Settings
# ============================================

# Enable debug logging
DEBUG=false

# Request timeout (milliseconds)
REQUEST_TIMEOUT=30000

# ============================================
# Quick Start Examples
# ============================================

# 1. For API-only usage (no blockchain):
#    TREZA_API_URL=https://api.treza.io/api
#    TREZA_API_KEY=your-key

# 2. For blockchain read operations (no private key needed):
#    SEPOLIA_RPC_URL=https://rpc.sepolia.org
#    SEPOLIA_KYC_VERIFIER_ADDRESS=0xB1D98F688Fac29471D91234d9f8EbB37238Df6FA

# 3. For blockchain write operations (proof submission):
#    SEPOLIA_RPC_URL=https://rpc.sepolia.org
#    SEPOLIA_KYC_VERIFIER_ADDRESS=0xB1D98F688Fac29471D91234d9f8EbB37238Df6FA
#    PRIVATE_KEY=0x...

# 4. For local development with Next.js backend:
#    TREZA_API_URL=http://localhost:3000/api
#    SEPOLIA_RPC_URL=https://rpc.sepolia.org
#    SEPOLIA_KYC_VERIFIER_ADDRESS=0xB1D98F688Fac29471D91234d9f8EbB37238Df6FA
